<!DOCTYPE html>
<html lang="en">
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <title><%= content_for(:title) || 'DuckRails' %></title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/navigation_bar' %>

    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="body-content">
            <%= yield %>
          </div>
        </div>
      </div>

      <%= render 'shared/footer' %>
    </div>
  </body>
</html>
